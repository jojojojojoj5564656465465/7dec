{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "extends": [],
  "files": {
    "ignoreUnknown": true
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      ".astro",
      "dist",
      "node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "tab",
      "indentWidth": 2,
      "lineWidth": 120,
      "trailingCommas": "none"
    }
  },
  "linter": {
    "ignore": [
      "dist",
      "stubs"
    ],
    "rules": {
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true,
        "useLiteralKeys": "off"
      },
      "correctness": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true
      },
      "suspicious": {
        "noExplicitAny": "off",
        "recommended": true,
        "noArrayIndexKey": "off",
        "noMisleadingCharacterClass": "off"
      },
      "nursery": {
        "recommended": true
      }
    }
  }
}
