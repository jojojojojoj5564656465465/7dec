import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
const posts = await getCollection("business");
---

<Layout>
  <h1>Mes articles</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/business/${post.id}`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
